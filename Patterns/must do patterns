void print1(int n){
  for(int i = 0; i < n; i++)
  {
    for(int j = 0; j < n; j++)
    {
      std::cout << "* ";
    }
    std::cout << '\n';
  }
}
void print2(int n)
{
  for (int i = 0; i < n; i++)
  {
    for (int j = 0; j <= i; j++)
    {
      std::cout << "* ";
    }
    std::cout << '\n';
  }
}
void print3(int n){
  for(int i=1;i<=n;i++){
    for (int j=1;j<=i; j++){
      std::cout << j << " ";
    }
    std::cout << '\n';
  }
}
void print4(int n){
  for(int i=1;i<=n;i++){
    for (int j=1;j<=i; j++){
      std::cout << i << " ";
    }
    std::cout << '\n';
  }
}
void print5(int n){
  for(int i=1;i<=n;i++){
    for (int j=0;j<n-i+1; j++){
      std::cout << "* ";
    }
    std::cout << '\n';
  }
}
void print6(int n){
  for(int i=1;i<=n;i++){
    for (int j=1;j<=n-i+1; j++){
      std::cout << j << " ";
    }
    std::cout << '\n';
  }
}
void print7(int n){
  for(int i=0;i<n;i++){
    //space
    for(int j=0;j<n-i+1;j++){
      std::cout << " ";
    }
    //star
    for(int j=0;j<2*i+1;j++){
      std::cout << "*";
    }
    //space
    for(int j=0;j<n-i+1;j++){
      std::cout << " ";
    }
    std::cout << '\n';
  }
}
void print8(int n){
  for(int i=0;i<n;i++){
    //space
    for(int j=0;j<i;j++){
      std::cout << " ";
    }
    //star
    for(int j=0;j<2*n-(2*i+1);j++){
      std::cout << "*";
    }
    //space
    for(int j=0;j<i;j++){
      std::cout << " ";
    }
    std::cout << '\n';
  }
}

int main(){
  int t;
  std::cin >> t;
  for(int i=0;i < t;i++){
    int n;
    std::cin >> n;
    print8(n);  
  }
  return 0;
}
